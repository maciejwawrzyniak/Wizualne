@model TomaszewskiWawrzyniak.MonitoryApp.Web.Models.ProducerDetails
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Producer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountryFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryFrom)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Monitors
            </th>
            <th>
                Diagonal
            </th>
            <th>
                Matrix
            </th>
            <th>
                Producer Name
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model.Monitors)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProducerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diagonal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matrix)
        </td>
    </tr>
}
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
