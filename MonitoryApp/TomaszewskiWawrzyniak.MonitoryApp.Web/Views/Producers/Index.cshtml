@model IEnumerable<TomaszewskiWawrzyniak.MonitoryApp.Web.Models.ProducerDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" style="max-width: 200px">
    <div class="form-group">
        <label class="control-label">Name: </label>
        <input type="text" name="SearchName" value="@ViewData["SearchName"]" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Country: </label>
        <select name="CountryFrom" class="form-control" asp-items="@ViewData["CountriesFrom"] as List<SelectListItem>"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-default" /> |
        <a asp-action="Index">Back to Full List</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryFrom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
