<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomaszewskiWawrz.MonitoryApp.MAUI.ProducersPage"
             xmlns:viewmodel="clr-namespace:TomaszewskiWawrz.MonitoryApp.MAUI.ViewModels"
             Title="ProducersPage">

    <StackLayout>
        <!-- List of Producers -->
        <ListView ItemsSource="{Binding Producers}" ItemTapped="ListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <!-- Producer Information -->
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding CountryFrom}" />

                            <!-- List of Monitors for the current Producer -->
                           
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>